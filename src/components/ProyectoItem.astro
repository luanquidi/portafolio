---
interface Props {
    title: string;
    description: string;
    link: string;
    github: string;
    image: string;
    tags: any[];
}

const { title, description, link, github, image, tags } = Astro.props;
---

<article class="">
    <h3 class="text-2xl font-semibold text-blue-500/90">{title}</h3>
    <p class="text-lg mb-4 text-pretty">{description}</p>
    <ul class="flex gap-x-4 flex-row mb-8">
        {
            tags.map((tag) => (
                <li>
                    <span class="flex gap-x-2 rounded-full text-xs border border-gray-500 items-center  py-1 px-2 ">
                        <tag.icon class="size-6" /> {tag.name}
                    </span>
                </li>
            ))
        }
    </ul>
    <img class="rounded shadow-2xl shadow-black/10" src={image} alt={title} />
</article>
